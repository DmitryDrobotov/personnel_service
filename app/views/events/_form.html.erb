<%= form_for @event do |f| %>
    <%= f.error_messages %>

    <div class="clearfix">
      <%= f.label :start_at %>
      <div class="input datetime_select">
        <%= f.datetime_select :start_at %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :end_at %>
      <div class="input datetime_select">
        <%= f.datetime_select :end_at %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label :title %>
      <div class="input">
        <%= f.text_field :title %>
      </div>
    </div>

    <div class="cleafix">
      <%= f.label :description %>
      <div class="input">
        <%= f.text_area :description, :rows => "10" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit :class => "btn primary" %>
    </div>
<% end %>