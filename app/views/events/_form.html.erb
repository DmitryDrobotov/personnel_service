<%= form_for @event do |f| %>
    <%= f.error_messages %>

    <div class="clearfix">
      <%= f.label t(:events_start_at) %>
      <div class="input datetime_select">
        <%= f.datetime_select :start_at %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label t(:events_end_at) %>
      <div class="input datetime_select">
        <%= f.datetime_select :end_at %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label t(:events_title) %>
      <div class="input">
        <%= f.text_field :title %>
      </div>
    </div>

    <div class="cleafix">
      <%= f.label t(:events_description) %>
      <div class="input">
        <%= f.text_area :description, :rows => "10" %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit t(:events_new), :class => "btn primary" %>
    </div>
<% end %>