<%= form_for @activity do |f| %>
  <%= f.error_messages %>
  
  <div class="clearfix">
    <%= f.label :user %>
      <div class="input">
        <%= f.text_field :user %>
      </div>
  </div>
  
  <div class="clearfix">
    <%= f.label :event %>
      <div class="input">
        <%= f.text_field :event %>
      </div>
  </div>
  
  
  <div class="actions">
    <%= f.submit :class => "btn primary" %>
  </div>

<% end %>
