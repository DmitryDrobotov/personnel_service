<%= form_for @treatment do |f| %>
    <%= f.error_messages %>
    <div class="clearfix">
      <%= f.label :user_to %>
      <div class="input">
        <%= f.collection_select :user_to_id, User.all, :id, :full_name %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label t(:treatments_title) %>
      <div class="input">
        <%= f.text_field :title %>
      </div>
    </div>

    <div class="clearfix">
      <%= f.label t(:treatments_content) %>
      <div class="input">
        <%= f.text_area :content %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit t(:treatments_new), :class => "btn primary" %>
    </div>
<% end %>
