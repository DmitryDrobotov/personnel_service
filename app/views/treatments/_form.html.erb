<%= form_for @treatment do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.label :user_to %><br />
    <%= f.text_field :user_to %>
  </p>
  <p>
    <%= f.label :user_from %><br />
    <%= f.text_field :user_from %>
  </p>
  <p><%= f.submit %></p>
<% end %>
