<% title "Treatment" %>

<p>
  <strong>User From:</strong>
  <%= user_full_name_link_to @treatment.user_from %>
</p>
<p>
  <strong>Title:</strong>
  <%= @treatment.title %>
</p>
<p>
  <strong>Content:</strong>
  <%= @treatment.content %>
</p>

<p>
  <%= link_to "Edit", edit_treatment_path(@treatment) if can? :update, @treatment %> |
  <%= link_to "Destroy", @treatment, :confirm => 'Are you sure?', :method => :delete if can? :destroy, @treatment %> |
  <%= link_to "View All", treatments_path if can? :read, Treatment %>
</p>
