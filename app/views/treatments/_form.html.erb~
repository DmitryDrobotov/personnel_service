<%= form_for @treatment do |f| %>
  <%= f.error_messages %>
  <div class="clearfix">
    <%= f.label :title %>
    <div class="input">
      <%= f.text_field :title %>
    </div>
  </div>
  
  <div class="clearfix">
    <%= f.label :content %>
    <div class="input">
      <%= f.text_area :content %>
    </div>
  </div>
  
  <div class="clearfix">
    <%= f.label :user_to %>
    <div class="input">
      <%= f.text_field :user_to %>
    </div>
  </div>
  
  <div class="clearfix">
    <%= f.label :user_from %>
    <div class="input">
      <%= f.text_field :user_from %>
    </div>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
