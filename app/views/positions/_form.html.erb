<%= form_for @position do |f| %>
  <%= f.error_messages %>

  <div class="clearfix">
    <%= f.label :name %>
    <div class="input">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :department %>
    <div class="input">
      <%= f.collection_select :department_id, Department.all, :id, :name %>
    </div>
  </div>

  <div class="clearfix">
    <%= f.label :manager %>
    <div class="input">
      <%= f.collection_select :manager_id, Position.all, :id, :name %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn primary"%>
  </div>
<% end %>
