<% title "Position" %>

<p>
  <strong>Department:</strong>
  <%= @position.department.name if @position.department.present? %>
</p>
<p>
  <strong>Name:</strong>
  <%= @position.name %>
</p>
<p>
  <strong>Manager:</strong>
  <%= @position.manager.name if @position.manager.present? %>
</p>

<p>
  <%= link_to "Edit", edit_position_path(@position) if can? :update, @position %> |
  <%= link_to "Destroy", @position, :confirm => 'Are you sure?', :method => :delete if can? :destroy, @position %> |
  <%= link_to "View All", positions_path if can? :read, Position %>
</p>
