<% title "User" %>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
<p>
  <strong>First Name:</strong>
  <%= @user.first_name %>
</p>
<p>
  <strong>Last Name:</strong>
  <%= @user.last_name %>
</p>
<p>
  <strong>Position:</strong>
  <%= @user.position.name if @user.position.present? %>
</p>
<p>
  <strong>Chief:</strong>
  <%= user_full_name_link_to @user.chief %>
</p>
<p>
  <strong>Role:</strong>
  <%= @user.role %>
</p>

<p>
  <%= link_to "Edit", edit_user_path(@user) if can? :update, @user %> |
  <%= link_to "Destroy", @user, :confirm => 'Are you sure?', :method => :delete if can? :destroy, @user %> |
  <%= link_to "View All", users_path if can? :read, User %>
</p>
