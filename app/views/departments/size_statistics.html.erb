<% title "Size Statistics" %>

<ul class="tabs" data-tabs="tabs">
  <li class="active"><%= link_to "Columns", "#size_statistics_column" %></li>
  <li><%= link_to "Pie", "#size_statistics_pie" %></li>
</ul>

<div class="tab-content">
  <div id="size_statistics_column" class="tab-pane active"></div>
  <div id="size_statistics_pie" class="tab-pane"></div>
</div>

<script type="text/javascript">
    $().ready(function() {

        function buildChart(data) {
            var sizeStatisticsChart = new FusionCharts("/charts/Column3D.swf", "chart_id", "940", "400", "0", "1");
            sizeStatisticsChart.setXMLData(data);
            sizeStatisticsChart.render("size_statistics_column");
        }

        function obtainData() {
            var url = "/ajax/java_url_data?"
                    + "method=userActivities" + "&"
                    + "excipient=deptSizeStatistics";
            $.ajax({
                type: "GET",
                url: url,
                success: function(response) {
                    buildChart(response);
                }
            });
        }

        obtainData();

    });
</script>

